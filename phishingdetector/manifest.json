{
  "manifest_version": 3,
  "name": "Mayank's Phish Detector",
  "version": "0.1",
  "description": "Detect likely phishing pages using a tiny model (development prototype).",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mayank's Phish Detector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["model.json","blocked.html","blocked.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
